{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",  // Refers to the active file in the src folder
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",  // Output to bin folder in the workspace
                "-I${workspaceFolder}\\include",  // Add SFML include path
                "-L${workspaceFolder}\\lib",       // Add SFML lib path
                "-lsfml-graphics",                 // Link against SFML Graphics
                "-lsfml-window",                   // Link against SFML Window
                "-lsfml-system"                    // Link against SFML System
            ],
            "options": {
                "cwd": "${fileDirname}"  // Set current working directory to the source file's directory
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
